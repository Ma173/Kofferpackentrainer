<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUser">

    <TextView
        android:id="@+id/greetingTextNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="@string/greeting_new_user"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameEditBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="13pt" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/askForSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="@string/ask_for_skill"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/usernameEditBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lineOfButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lowSkill"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_weight="1"
            android:text="<= P4" />

        <Button
            android:id="@+id/mediumSkill"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_toRightOf="@id/lowSkill"
            android:layout_weight="1"
            android:text=">= P4    <P8" />

        <Button
            android:id="@+id/highSkill"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_toRightOf="@id/mediumSkill"
            android:layout_weight="1"
            android:text="> P8" />
    </LinearLayout>

    <Button
        android:id="@+id/createNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neuen Benutzer anlegen"
        android:layout_marginTop="500dp"
        app:layout_constraintBottom_toBottomOf="@id/lineOfButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>